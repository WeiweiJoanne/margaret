{% if section.settings.enable_cards %}

  <section class="mt-12 mb-2">
    <div class="mx-auto container">

      {% if section.settings.cards_heading != blank %}
        <h2 class="text-2xl font-black text-center mb-2">{{ section.settings.cards_heading }}</h2>
      {% endif %}

      <div class="flex gap-12 justify-center">

        {% for block in section.blocks %}
          {% if block.type == 'card' %}
            <div class="basic-1/3">
              <img src="{{ block.settings.card_image |  image_url: width: 500  }}" alt="">
              <h3 class="text-xl font-bold">{{ block.settings.card_heading }}</h3>
              <p>{{ block.settings.card_desc }}</p>
            </div>

          {% endif %}

        {% endfor %}

      </div>
    </div>
  </section>
{% endif %}

{% schema %}
  {
    "name": "Card template",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_cards",
        "label": "Enable Cards",
        "default": true
      }, {
        "type": "inline_richtext",
        "id": "cards_heading",
        "label": "Cards Heading",
        "default": "Cards Heading"
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card Image"
          }, {
            "type": "richtext",
            "id": "card_desc",
            "label": "Card Description"
          }
        ],
        "limit": 3
      }
    ]
  }
{% endschema %}