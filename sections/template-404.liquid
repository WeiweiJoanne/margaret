<div class="max-w-md">
  <div class="text-3xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">
      {{ section.settings.subText_title }}
    </p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a href="{{shop_url}}" class="text-base bg-green-600 text-white py-2 px-4 font-medium hover:bg-green-800">{{ section.settings.button_label }}</a>
  </div>

</div>


{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Head title"
      }, {
        "type": "text",
        "id": "subText_title",
        "default": "The page you are looking for is not found",
        "label": "404 subtext Title"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back to Homepage",
        "label": "Button label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"
      }
    ]
  }
{% endschema %}